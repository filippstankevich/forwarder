@model Forwarder.Models.RouteModel
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
 
           
@using (Html.BeginForm("RouterData", "Transportation"))
{    
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.RouteId)

    <div class="row">
        <div class="span3">
                <div class="control-group">
                    <label class="span3 text-left">Дорога</label>
                    <div class="controls">              
                        @Html.DropDownListFor(m => m.RoadId, Model.Roads)
                        @Html.ValidationMessageFor(m=>m.RoadId)
                    </div>
                </div>  
                <div class="control-group">
                    <label class="span3 text-left">Перевозчик</label>
                    <div class="controls">
                         @Html.DropDownListFor(m => m.CarrierId, Model.Carriers)
                         @Html.ValidationMessageFor(m=>m.CarrierId)
                    </div>
                </div>
           
        </div>     

        <div class="form-actions">
            <button type = "submit"  style="margin: 0 0 0 100px;">Сохранить</button>
        </div>
    </div>
}